<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="cac.fhict.org.coachingappcoach.AppCoachResult"
        tools:showIn="@layout/activity_app_coach_result">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cvwResultTable"
            android:layout_marginTop="55dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/results"
                    android:id="@+id/tvwResult"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvwResult"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tableLayout">

                    <TableRow>

                        <TextView
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/sport_functionality"
                            android:id="@+id/textView13"
                            android:layout_column="0"
                            android:layout_span="2"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="9"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/location_tracking"
                            android:id="@+id/textView2"
                            android:layout_column="0"
                            android:layout_marginLeft="10dp" />

                        <CheckBox android:checked="true"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:layout_column="1"
                            android:layout_marginRight="10dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_weight="9"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/cardio_logging"
                            android:id="@+id/textView3"
                            android:layout_column="0"
                            android:layout_marginLeft="10dp" />

                        <CheckBox android:checked="true"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:layout_column="1"
                            android:layout_marginRight="10dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_weight="9"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/power_training_logging"
                            android:id="@+id/textView4"
                            android:layout_column="0"
                            android:layout_marginLeft="10dp" />

                        <CheckBox android:checked="false"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:layout_column="1"
                            android:layout_marginRight="10dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_weight="9"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/support_for_wearables"
                            android:id="@+id/textView5"
                            android:layout_column="0"
                            android:layout_marginLeft="10dp" />

                        <CheckBox android:checked="false"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:layout_column="1"
                            android:layout_marginRight="10dp" />

                    </TableRow>

                    <TableRow>

                        <TextView
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/motivation"
                            android:id="@+id/textView10"
                            android:layout_column="0"
                            android:layout_span="2"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_weight="9"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/support_for_muziek"
                            android:id="@+id/textView6"
                            android:layout_column="0"
                            android:layout_marginLeft="10dp" />

                        <CheckBox android:checked="true"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:layout_column="1"
                            android:layout_marginRight="10dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_weight="9"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/share_on_social_media"
                            android:id="@+id/textView7"
                            android:layout_column="0"
                            android:layout_marginLeft="10dp" />

                        <CheckBox android:checked="false"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:layout_column="1"
                            android:layout_marginRight="10dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_weight="9"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/support_your_friends"
                            android:id="@+id/textView8"
                            android:layout_column="0"
                            android:layout_marginLeft="10dp" />

                        <CheckBox android:checked="true"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:layout_column="1"
                            android:layout_marginRight="10dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_weight="9"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/compare_results_with_friends"
                            android:id="@+id/textView9"
                            android:layout_column="0"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp" />

                        <CheckBox android:checked="false"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:layout_column="1"
                            android:layout_marginRight="10dp" />

                    </TableRow>

                </TableLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cvwResultTable">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/advice"
                android:id="@+id/textView11"
                android:layout_column="0"

                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/result_advice"
                android:id="@+id/textView12"
                android:layout_column="0"
                android:layout_below="@+id/textView11"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp" />

        </RelativeLayout>


    </RelativeLayout>
</ScrollView>

